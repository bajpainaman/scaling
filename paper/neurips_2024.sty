% NeurIPS 2024 Style File
% Based on the official NeurIPS template

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2024}[2024/01/01 NeurIPS 2024 submission style]

\RequirePackage{geometry}
\RequirePackage{fancyhdr}
\RequirePackage{natbib}
\RequirePackage{times}

% Options
\newif\if@submission
\newif\if@final
\@submissiontrue
\@finalfalse

\DeclareOption{submission}{\@submissiontrue\@finalfalse}
\DeclareOption{final}{\@submissionfalse\@finaltrue}
\DeclareOption{nonatbib}{}
\ProcessOptions\relax

% Page layout
\geometry{
  textwidth=6.5in,
  textheight=9in,
  top=1in,
  headheight=14pt,
  headsep=10pt,
  footskip=20pt,
}

% Font settings
\renewcommand{\rmdefault}{ptm}
\renewcommand{\sfdefault}{phv}

% Section formatting
\renewcommand{\section}{\@startsection{section}{1}{\z@}%
  {-2.0ex \@plus -0.5ex \@minus -0.2ex}%
  {1.5ex \@plus 0.3ex \@minus 0.2ex}%
  {\large\bf\raggedright}}

\renewcommand{\subsection}{\@startsection{subsection}{2}{\z@}%
  {-1.8ex \@plus -0.5ex \@minus -0.2ex}%
  {0.8ex \@plus 0.2ex}%
  {\normalsize\bf\raggedright}}

\renewcommand{\subsubsection}{\@startsection{subsubsection}{3}{\z@}%
  {-1.5ex \@plus -0.5ex \@minus -0.2ex}%
  {0.5ex \@plus 0.2ex}%
  {\normalsize\bf\raggedright}}

\renewcommand{\paragraph}{\@startsection{paragraph}{4}{\z@}%
  {1.5ex \@plus 0.5ex \@minus 0.2ex}%
  {-1em}%
  {\normalsize\bf}}

% Title formatting
\def\@maketitle{%
  \vbox to 2.25in{%
    \vspace*{\fill}
    \vskip 2em
    \begin{center}%
      {\LARGE\bf \@title \par}%
      \vskip 1.5em
      {\large
        \lineskip .5em
        \begin{tabular}[t]{c}%
          \@author
        \end{tabular}\par}%
    \end{center}%
    \vskip 1.5em
    \vspace*{\fill}
  }
}

% Abstract formatting
\renewenvironment{abstract}%
{%
  \centerline{\large\bf Abstract}%
  \vspace{0.5ex}%
  \begin{quote}%
}%
{%
  \par%
  \end{quote}%
  \vskip 1ex%
}

% Citation style
\setcitestyle{authoryear,round,citesep={;},aysep={,},yysep={;}}

% Headers
\pagestyle{fancy}
\fancyhf{}
\fancyhead[C]{\small NeurIPS 2024}
\fancyfoot[C]{\thepage}
\renewcommand{\headrulewidth}{0pt}

% Footnotes
\renewcommand{\footnoterule}{%
  \kern -3pt
  \hrule width 0.4\columnwidth
  \kern 2.6pt
}

% Floats
\setlength{\floatsep}{12pt plus 2pt minus 2pt}
\setlength{\textfloatsep}{20pt plus 2pt minus 4pt}
\setlength{\intextsep}{12pt plus 2pt minus 2pt}

\endinput

